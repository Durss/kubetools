package com.muxxu.kube.commands {	import com.nurun.core.commands.events.CommandEvent;	import com.nurun.structure.environnement.configuration.Config;	import com.nurun.structure.environnement.label.Label;	import flash.events.Event;	import flash.events.IOErrorEvent;	import flash.net.URLRequest;	/**	 * Loads the application's labels.	 * 	 * @author  Francois	 */	public class LoadLabelsCmd extends LoadCssCmd {										/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>LoadLabelsCmd</code>.		 */		public function LoadLabelsCmd() {			super();		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/* ****** *		 * PUBLIC *		 * ****** */		override public function execute():void {			_loader.load(new URLRequest(Config.getPath("labels")));		}						/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Called when loading completes.		 */		override protected function loadCompleteHandler(e:Event):void {			var xml:XML;			try {				xml = new XML(_loader.data);			}catch(error:Error){				dispatchEvent(new CommandEvent(CommandEvent.ERROR, "Labels XML bad formated."));				return;			}			Label.populate(xml.child("languages").child("language").(@code == Config.getVariable("lang"))[0]);			dispatchEvent(new CommandEvent(CommandEvent.COMPLETE));		}		/**		 * Called if loading fails.		 */		override protected function loadErrorHandler(e:IOErrorEvent):void {			dispatchEvent(new CommandEvent(CommandEvent.ERROR, "Labels file not found."));		}			}}