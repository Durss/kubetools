package com.muxxu.kube.events {	import flash.events.Event;	/**	 * 	 * @author  Francois	 */	public class PopinErrorEvent extends Event {				public static const ERROR:String = "errorPopin";		private var _description:String;						/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>PopinErrorEvent</code>.		 */		public function PopinErrorEvent(type:String, description:String, bubbles:Boolean = false, cancelable:Boolean = false) {			_description = description;			super(type, bubbles, cancelable);		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/**		 * Gets the error's description.		 */		public function get description():String { return _description; }		/* ****** *		 * PUBLIC *		 * ****** */		override public function clone():Event {			return new PopinErrorEvent(type, description);		}						/* ******* *		 * PRIVATE *		 * ******* */			}}