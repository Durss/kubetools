package com.muxxu.kube.views.login.steps {	import com.muxxu.kube.components.button.KubeButton;	import com.muxxu.kube.events.LoginEvent;	import com.nurun.components.text.CssTextField;	import com.nurun.components.vo.Margin;	import com.nurun.structure.environnement.label.Label;	import flash.display.Sprite;	import flash.events.MouseEvent;	/**	 * Displays the first login step.	 * 	 * @author  Francois	 */	public class LoginStep1 extends Sprite {				private var _text:CssTextField;		private var _nextBt:KubeButton;		private var _textGuest:CssTextField;		private var _guestBt:KubeButton;								/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>Step1</code>.		 */		public function LoginStep1() {			initialize();		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/* ****** *		 * PUBLIC *		 * ****** */						/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Initializes the class.		 */		private function initialize():void {			_text = addChild(new CssTextField("loginStepLabel")) as CssTextField;			_text.text = Label.getLabel("loginStep1");			_text.width = 270;			_text.wordWrap = true;						_nextBt = addChild(new KubeButton(Label.getLabel("loginConnect"))) as KubeButton;			_nextBt.contentMargin = new Margin(4, 4, 4, 4);			_nextBt.x = Math.round((270-_nextBt.width) * .5);			_nextBt.y = Math.round(_text.height + 15);						_textGuest = addChild(new CssTextField("loginStepLabel")) as CssTextField;			_textGuest.text = Label.getLabel("loginStep1.1");			_textGuest.width = 270;			_textGuest.wordWrap = true;			_textGuest.y = Math.round(_nextBt.y + _nextBt.height + 30);						_guestBt = addChild(new KubeButton(Label.getLabel("loginAbort"))) as KubeButton;			_guestBt.contentMargin = new Margin(4, 4, 4, 4);			_guestBt.x = Math.round((270-_guestBt.width) * .5);			_guestBt.y = Math.round(_textGuest.y + _textGuest.height + 5);						_nextBt.addEventListener(MouseEvent.CLICK, clickHandler);			_guestBt.addEventListener(MouseEvent.CLICK, clickHandler);		}				/**		 * Called when next button is clicked.		 */		private function clickHandler(event:MouseEvent):void {			if(event.target == _nextBt) {				dispatchEvent(new LoginEvent(LoginEvent.NEXT_STEP));
			}else{				trace("LoginStep1.clickHandler(event)");
				dispatchEvent(new LoginEvent(LoginEvent.ABORT));			}		}
	}}