package com.muxxu.kube.views.generator.menus {	import com.muxxu.kube.views.generator.selector.TextureCube;	import com.muxxu.kube.vo.Texture;	import com.nurun.components.form.GroupableFormComponent;	import com.nurun.components.text.CssTextField;	import flash.display.Sprite;	/**	 * Displays a counter item.<br>	 * <br>	 * A counter item is composed of a texture object and a label containing	 * the number of times this texture is used.	 * 	 * @author  Francois	 */	public class CounterItem extends Sprite implements GroupableFormComponent {				private var _texture:TextureCube;		private var _label:CssTextField;						/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>CounterItem</code>.		 */		public function CounterItem(texture:Texture, total:int) {			initialize();			_texture.populate(texture);			_label.text = "X "+total;			computePositions();		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/**		 * Just returns the height + 5 to have a margin between items.<br>		 * <br>		 * This is a patch while waiting for an update of the List component to		 * do that natively.		 */		override public function get height():Number { return super.height + 4; }						public function unSelect():void {			//just here for interface validation		}				public function select():void {			//just here for interface validation		}				public function get selected():Boolean {			//just here for interface validation			return false;		}				public function set selected(value:Boolean):void {			//just here for interface validation		}		/* ****** *		 * PUBLIC *		 * ****** */		/**		 * Makes the component garbage collectable.		 */		public function dispose():void {			_texture.dispose();			removeChild(_label);			removeChild(_texture);		}								/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Initialize the class.		 */		private function initialize():void {			_texture	= addChild(new TextureCube()) as TextureCube;			_label		= addChild(new CssTextField("counterTexture")) as CssTextField;			_texture.width = _texture.height = _texture.depth = 16;		}				/**		 * Resize and replace the elements.		 */		private function computePositions():void {			_texture.y	= 10;			_texture.x	= 10;			_label.x	= Math.round(_texture.x + _texture.width + 5);			_label.y	= Math.round(_texture.y + (_texture.height - _label.height) * .5);		}	}}