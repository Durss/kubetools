package com.muxxu.kube.views.generator.selector {	import flash.display.Bitmap;	import flash.display.Sprite;	/**	 * Displasy a face of a <code>TextureCube</code> object.	 * 	 * @author  Francois	 */	public class TextureCubeFace extends Sprite {		private var _height:Number	= 32;		private var _width:Number	= 32;		private var _bitmap:Bitmap;								/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>TextureCube</code>.		 */		public function TextureCubeFace() {			initialize();		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/**		 * Sets the face's width.		 */		override public function set width(value:Number):void {			_width = value;			_bitmap.x = Math.round(-_width * .5);			if(_bitmap.bitmapData != null){				_bitmap.width = _width;			}		}				/**		 * Sets the face's height.		 */		override public function set height(value:Number):void {			_height = value;			_bitmap.y = Math.round(-_height * .5);			if(_bitmap.bitmapData != null){				_bitmap.height = _height;			}		}				/**		 * Sets the bitmap to displays as a face.		 */		public function set bitmap(value:Bitmap):void {			_bitmap.bitmapData = value.bitmapData;		}		/* ****** *		 * PUBLIC *		 * ****** */		/**		 * Makes the component garbage collectable.		 */		public function dispose():void {			removeChild(_bitmap);			_bitmap.bitmapData = null;		}								/* ******* *		 * PRIVATE *		 * ******* */		/**		 * Initialize the class.		 */		private function initialize():void {			_bitmap = addChild(new Bitmap()) as Bitmap;			width	= _width;			height	= _height;		}	}}