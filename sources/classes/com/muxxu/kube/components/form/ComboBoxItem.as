package com.muxxu.kube.components.form {	import com.muxxu.kube.graphics.ComboBoxItemBackground;	import com.muxxu.kube.graphics.ComboBoxItemCheck;	import com.muxxu.kube.graphics.ComboBoxSelectedItemBackground;	import com.nurun.components.button.IconAlign;	import com.nurun.components.button.TextAlign;	import com.nurun.components.form.ToggleButton;	import com.nurun.components.vo.Margin;	import flash.display.MovieClip;	/**	 * Creates a combo box item.	 * 	 * @author  Francois	 */	public class ComboBoxItem extends ToggleButton {										/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>ComboBoxItem</code>.		 */		public function ComboBoxItem(label:String) {			var defaultIcon:MovieClip = new MovieClip();			defaultIcon.graphics.beginFill(0,0);			defaultIcon.graphics.drawRect(0, 0, 10, 10);			super(label, "comboboxItemLabel", "comboboxItemLabel_selected", new ComboBoxItemBackground(), new ComboBoxSelectedItemBackground(), defaultIcon, new ComboBoxItemCheck());			iconAlign = IconAlign.LEFT;			iconSpacing = 5;			textAlign = TextAlign.LEFT;			contentMargin = new Margin(4, 0, 0, 0);			textBoundsMode = false;			activateDefaultVisitor();		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		override public function get height():Number{			return super.height + 1;		}				/* ****** *		 * PUBLIC *		 * ****** */						/* ******* *		 * PRIVATE *		 * ******* */	}}