package com.muxxu.kube.components.button {	import com.muxxu.kube.graphics.ButtonSkin;	import com.nurun.components.button.IconAlign;	import com.nurun.components.button.TextAlign;	import com.nurun.components.button.visitors.CssVisitor;	import com.nurun.components.button.visitors.FrameVisitor;	import com.nurun.components.button.visitors.FrameVisitorOptions;	import com.nurun.components.form.ToggleButton;	import com.nurun.components.vo.Margin;	import flash.display.MovieClip;	import flash.filters.DropShadowFilter;	/**	 * Displays a classic button.	 * 	 * @author  Francois	 */	public class KubeToggleButton extends ToggleButton {										/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>KubeToggleButton</code>.		 */		public function KubeToggleButton(label:String, icon:MovieClip= null, selectedIcon:MovieClip= null) {			var back:ButtonSkin = new ButtonSkin();			super(label, "button", "button",back, back, icon, selectedIcon);			contentMargin = new Margin(2, 2, 4, 2);			var fv:FrameVisitor = new FrameVisitor();			var opts:FrameVisitorOptions = new FrameVisitorOptions("out", "over", "down", "disable");			opts.enableFrameFrom = "out";			opts.disableFrameFrom = "disable";			fv.addTarget(back, opts);			if(icon != null){				iconAlign = IconAlign.LEFT;				iconSpacing = 3;				fv.addTarget(icon, opts);			}			if(selectedIcon != null){				fv.addTarget(selectedIcon, opts);			}			accept(fv);			accept(new CssVisitor());			textAlign = TextAlign.LEFT;			_labelTxt.filters = [new DropShadowFilter(1,-45,0xffffff,.4,1,1,5)];		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/* ****** *		 * PUBLIC *		 * ****** */						/* ******* *		 * PRIVATE *		 * ******* */	}}