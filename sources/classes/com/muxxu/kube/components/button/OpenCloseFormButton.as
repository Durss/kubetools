package com.muxxu.kube.components.button {	import com.muxxu.kube.graphics.GalleryFormOpenerSkin;	import com.nurun.components.button.BaseButton;	import com.nurun.components.button.visitors.CssVisitor;	import com.nurun.components.button.visitors.FrameVisitor;	import com.nurun.components.button.visitors.FrameVisitorOptions;	import com.nurun.components.vo.Margin;	import flash.display.MovieClip;	import flash.filters.DropShadowFilter;	/**	 * Displasy the button that opens oand closes the gallery's form.	 * 	 * @author  Francois	 */	public class OpenCloseFormButton extends BaseButton {										/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>OpenCloseGalleryFormButton</code>.		 */		public function OpenCloseFormButton(label:String) {			super(label, "galleryFormOpener", new GalleryFormOpenerSkin());			textfield.filters = [new DropShadowFilter(1,45,0,.4,1,1,1,3,true)];			var fv:FrameVisitor = new FrameVisitor();			fv.addTarget(background as MovieClip, new FrameVisitorOptions("out", "over", "down", "out", true, .25));			accept(fv);			accept(new CssVisitor());			contentMargin = new Margin(0, 4, 0, 4);		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/* ****** *		 * PUBLIC *		 * ****** */						/* ******* *		 * PRIVATE *		 * ******* */			}}