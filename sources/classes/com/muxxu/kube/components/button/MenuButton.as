package com.muxxu.kube.components.button {	import com.muxxu.kube.graphics.MenuButtonSkin;	import com.nurun.components.button.BaseButton;	import com.nurun.components.button.visitors.CssVisitor;	import com.nurun.components.button.visitors.FrameVisitor;	import com.nurun.components.button.visitors.FrameVisitorOptions;	import com.nurun.components.vo.Margin;	import flash.display.MovieClip;	/**	 * Displays a main menu button. 	 * 	 * @author  Francois	 */	public class MenuButton extends BaseButton {								/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>MenuButton</code>.		 */		public function MenuButton(label:String) {			super(label, "menuItem", new MenuButtonSkin());			contentMargin = new Margin(6, 6, 6, 6);			var fv:FrameVisitor = new FrameVisitor();			var opts:FrameVisitorOptions = new FrameVisitorOptions("out", "over", "down", "disable", true, .35);			opts.enableFrameFrom = "out";			opts.disableFrameFrom = "disable";			fv.addTarget(background as MovieClip, opts);			accept(fv);			accept(new CssVisitor());		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/* ****** *		 * PUBLIC *		 * ****** */						/* ******* *		 * PRIVATE *		 * ******* */			}}