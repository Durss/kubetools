package com.muxxu.kube.components {	import gs.TweenLite;	import com.muxxu.kube.graphics.Spin;	import flash.events.Event;	/**	 * Displays rotating dots.	 * 	 * @author  Francois	 */	public class LoaderSpinning extends Spin {		private var _opened:Boolean;										/* *********** *		 * CONSTRUCTOR *		 * *********** */		/**		 * Creates an instance of <code>LoaderSpinning</code>.		 */		public function LoaderSpinning() {			alpha = 0;			visible = false;		}						/* ***************** *		 * GETTERS / SETTERS *		 * ***************** */		/**		 * Gets the virtual component's width.		 */		override public function get width():Number { return 26; }				/**		 * Gets the virtual component's hright.		 */		override public function get height():Number { return 26; }		/* ****** *		 * PUBLIC *		 * ****** */		/**		 * Opens the loader.		 */		public function open():void {			if(_opened) return;			_opened = true; 			addEventListener(Event.ENTER_FRAME, enterFrameHandler);			TweenLite.to(this, .5, {autoAlpha:1, overwrite:1});		}				/**		 * Closes the loader.		 */		public function close():void {			if(!_opened) return;			_opened = false;			removeEventListener(Event.ENTER_FRAME, enterFrameHandler);			TweenLite.to(this, .5, {autoAlpha:0, overwrite:1});		}				/**		 * Makes the component garbage collectable.		 */		public function dispose():void {			removeEventListener(Event.ENTER_FRAME, enterFrameHandler);			TweenLite.killTweensOf(this);		}						/* ******* *		 * PRIVATE *		 * ******* */				private function enterFrameHandler(e:Event):void {			rotation -= 16;		}			}}